<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="50dp"

                  android:layout_margin="5dp"
                  android:background="@drawable/btn_form2"
                  android:backgroundTint="@color/colorWhite"
                  android:orientation="horizontal"
                  android:gravity="center_vertical"
                  android:padding="10dp"
                  app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                  android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                  android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/txt_lv_client"
                  android:textSize="@dimen/txt_medium"
                  android:text="Client Name :"
                  android:textAlignment="center"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/colorPrimary"
                  android:id="@+id/txt_lv_montant"
                  android:layout_marginLeft="10dp"
                  android:textSize="@dimen/txt_medium"
                  android:text="Montant"
                  android:textStyle="bold" android:textAlignment="textStart"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/colorAccent"
                  android:layout_marginLeft="10dp"
                  android:id="@+id/txt_lv_actionM"
                  android:textSize="@dimen/txt_big"
                  android:text="D"
                  android:textStyle="bold" android:textAlignment="center"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>