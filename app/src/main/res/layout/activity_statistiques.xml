<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Statistiques">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_alignParentEnd="true"
                  android:gravity="center"
                  android:layout_alignParentStart="true"

                  android:layout_alignParentTop="true">


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:background="@color/colorPrimary"
                      android:gravity="center"
                      android:elevation="10dp"
        >
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Statistique de la pÃ©riode du"
                      android:textColor="#e4dddd"
                      android:textSize="@dimen/txt_big"
                      android:textAlignment="center"
                      android:textStyle="bold"/>


        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:background="@color/colorAccent"
                      android:gravity="center"
                      android:orientation="horizontal"


        >

            <EditText android:layout_width="100dp"
                      android:layout_height="wrap_content"
                      android:id="@+id/txt_stat_startdate"
                      android:layout_marginStart="5dp"
                      android:background="@color/colorWhite"
            />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Au"
                      android:layout_margin="5dp"
                      android:textStyle="bold"/>

            <EditText android:layout_width="100dp"
                      android:id="@+id/txt_stat_enddate"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="5dp"
                      android:background="@color/colorWhite"
            />


        </LinearLayout>
        <Button android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/search"
                android:backgroundTint="#c89c1b1b"
                android:text=""
                android:id="@+id/btn_stat_Ok"/>

        <ListView android:layout_width="match_parent"
                  android:layout_margin="5dp"
                  android:layout_height="match_parent"
                  android:id="@+id/ltv_statistiques">

        </ListView>
    </LinearLayout>

</RelativeLayout>