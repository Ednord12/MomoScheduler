<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"

        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"


>
    <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".Inscription"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:gravity="center_horizontal"


    >
        <EditText
                android:layout_width="300dp"
                android:backgroundTint="@color/colorWhite"
                android:layout_height="45dp"
                android:paddingLeft="10dp"
                android:hint="Nom"
                android:id="@+id/incr_nom"
                android:background="@drawable/btn_form"
                android:layout_marginTop="@dimen/margin"/>
        <EditText
                android:layout_width="300dp"
                android:backgroundTint="@color/colorWhite"
                android:layout_height="45dp"
                android:paddingLeft="10dp"
                android:id="@+id/incr_prenom"
                android:hint="Prénom"
                android:background="@drawable/btn_form"

                android:layout_marginTop="@dimen/margin"/>

        <EditText
                android:layout_width="300dp"
                android:backgroundTint="@color/colorWhite"
                android:layout_height="45dp"
                android:paddingLeft="10dp"
                android:hint="Téléphone"
                android:id="@+id/incr_telephone"
                android:background="@drawable/btn_form"
                android:layout_marginTop="@dimen/margin" android:inputType="phone"/>
        <EditText
                android:layout_width="300dp"
                android:backgroundTint="@color/colorWhite"
                android:layout_height="45dp"
                android:paddingLeft="10dp"
                android:hint="e-mail"
                android:id="@+id/incr_emeil"
                android:background="@drawable/btn_form"
                android:layout_marginTop="@dimen/margin" android:inputType="textEmailAddress"/>

        <TextView android:layout_width="250dp"
                  android:layout_margin="@dimen/margin"
                  android:layout_height="5dp"
                  android:background="@drawable/line"

        />
        <EditText
                android:layout_width="300dp"
                android:backgroundTint="@color/colorWhite"
                android:layout_height="45dp"
                android:paddingLeft="10dp"
                android:hint="Mot de passe"
                android:id="@+id/incr_mdp1"
                android:textColor="@color/colorWhite"
                android:background="@drawable/btn_form"
                android:layout_marginTop="@dimen/margin" android:inputType="textPassword"/>
        <EditText
                android:layout_width="300dp"
                android:backgroundTint="@color/colorWhite"
                android:layout_height="45dp"
                android:paddingLeft="10dp"
                android:hint="Mot de passe"
                android:id="@+id/incr_mdp2"
                android:background="@drawable/btn_form"
                android:layout_marginTop="@dimen/margin" android:inputType="textPassword"/>

        <Button android:layout_width="150dp"
                android:layout_marginTop="15dp"
                android:text="Creer le compte"
                android:id="@+id/btn_incr_creer_compt"
                android:background="@drawable/btn_form2"
                android:layout_height="wrap_content"/>


    </LinearLayout>
</ScrollView>